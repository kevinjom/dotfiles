[user]
	name = <your name>
	email = <your email>
[branch]
	autosetupmerge = true
	autosetuprebase = always
[push]
	default = current
[alias]
	ap = add -p
	br = branch
	co = checkout
	cp = checkout -p
	ci = commit
	cv = commit -v
	dc = diff --cached
	st=status
	sc = svn dcommit
	sr = svn rebase
	pr = pull --rebase
	ps = push
	l = log --graph --pretty=format:'%C(red)%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short --all
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[core]
	editor = /usr/local/bin/vim
